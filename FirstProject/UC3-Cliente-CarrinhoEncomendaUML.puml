@startuml
actor Cliente as c
participant "Sistema" as s

c -> s: 1. Adiciona um produto ao carrinho
s --> c: 2. Apresenta a nova lista
c -> s: 3. Carrega para retirar um produto
s --> c: 4. Apresenta a nova lista
c -> s: 5. Pretende fazer uma encomenda
c -> s: 6. Insere o nome
s -> s: 6.1. Regista o nome
c -> s: 7. Insere os números do cartão
s -> s: 7.1. Regista os números do cartão
c -> s: 8. Insere a morada
s -> s: 8.1. Regista a morada
alt
alt "Verificar os dados inseridos: true"
  s --> c: Return success
  s -> s: 8.2. Limpa o carrinho
else "Verificar os dados inseridos: false"
  s --> c: Return failure
end
@enduml